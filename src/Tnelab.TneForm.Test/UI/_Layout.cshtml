<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="/UI/css/window.css"/>
    @RenderSection("styles", required: false)
    <script src="Tne://Tnelab.TneForm/TneApp.js"></script>
    <script src="Tne://Tnelab.TneForm.Test.BLL/Service.js"></script>    
    <script src="Tne://Tnelab.TneForm.Test/ui/script/window.js"></script>
    @RenderSection("scripts", required:false)    
    
</head>
<body>
    <div class="window_bg"></div>
    <div class="window">
        <div onmousedown="MoveWindow()" class="caption_bar">
            <img class="app_icon" src="../default.png"/>
            <span span="caption">@ViewBag.Title</span>
            <a class="caption_button" onmousedown="event.stopPropagation()" onclick="Tnelab.ThisForm.Close()" href="#">关闭</a>
            <a class="caption_button" onmousedown="event.stopPropagation()" id="MaxButton" onclick="MaxWindow(this)" href="#">最大化</a>
            <a class="caption_button" onmousedown="event.stopPropagation()" onclick="MiniWindow()" href="#">最小化</a>
        </div>
        <div class="window_client">@RenderBody()</div>
    </div>
</body>
</html>
